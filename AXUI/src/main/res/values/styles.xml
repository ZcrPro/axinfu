<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="text_size_h4">@dimen/s24</dimen>
    <dimen name="text_size_h3">@dimen/s22</dimen>
    <dimen name="text_size_h2">@dimen/s20</dimen>
    <dimen name="text_size_h1">@dimen/s18</dimen>
    <dimen name="text_size_m">@dimen/s16</dimen>
    <dimen name="text_size_s1">@dimen/s14</dimen>
    <dimen name="text_size_s2">@dimen/s12</dimen>
    <dimen name="text_size_s3">@dimen/s11</dimen>
    <dimen name="text_size_s4">@dimen/s10</dimen>

    <style name="loading_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">false</item>
        <!--<item name="android:backgroundDimEnabled">false</item>-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Dialog.CustomView" parent="android:Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="edit_text">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingLeft">@dimen/s10</item>
        <item name="android:background">@drawable/input_phone_s</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/axf_light_gray</item>
        <item name="android:textSize">@dimen/text_size_s2</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/s40</item>
    </style>

    <style name="button_text">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/s40</item>
    </style>
    <style name="ButtonGray" >
    </style>

    <style name="TextView_Content">
        <item name="android:color">@color/axf_text_content_gray</item>
    </style>

    <style name="TextView_Title">
        <item name="android:color">@color/axf_text_title_gray</item>
    </style>

    <style name="TextView_Tips">
        <item name="android:color">@color/axf_light_gray</item>
    </style>

    <style name="logoutDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <declare-styleable name="GifView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CustomTheme">
        <attr name="gifViewStyle" format="reference" />
    </declare-styleable>
    <style name="Widget_GifView"></style>
</resources>