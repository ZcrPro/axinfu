<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <ImageView
        android:background="@mipmap/lock_window"
        android:layout_width="@dimen/s270"
        android:layout_height="@dimen/s270"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/s270"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bottom_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s10"
            android:layout_marginRight="@dimen/s10"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/s20"
                android:textColor="@color/axf_common_red"
                android:textSize="15sp"
                android:text="你已选择学生身份"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginBottom="@dimen/s5"
                android:layout_marginTop="@dimen/s10"
                android:textColor="@color/axf_text_content_gray"
                android:text="请确认身份，修改需要联系客服"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/ok"
                android:layout_width="@dimen/s180"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/s10"
                android:background="@drawable/btn_axf_blue"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/s13" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="@dimen/s180"
                android:layout_height="wrap_content"
                android:background="@drawable/union_blueslide_btnbg"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/axf_common_blue"
                android:textSize="@dimen/s13" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
