<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/mainview"
                android:layout_height="match_parent">
    <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="260dp"
            android:layout_height="330dp">
        <RelativeLayout
                android:id="@+id/main_view"
                android:layout_marginTop="-35dp"
                android:layout_below="@+id/title_icon"
                android:background="@drawable/important_notice_text_bg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/s10"
                    android:layout_above="@+id/notice_btn"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginRight="@dimen/s15"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <ScrollView
                        android:layout_marginTop="@dimen/s10"
                        android:scrollbars="none"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_marginLeft="@dimen/s5"
                                android:textSize="15sp"
                                android:text="如何还款"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_margin="@dimen/s5"
                                android:textSize="13sp"
                                android:text="还款账号"
                                android:textColor="@color/axf_text_title_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_marginLeft="@dimen/s5"
                                android:textSize="13sp"
                                android:id="@+id/account"
                                android:text="7687687798978"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:layout_margin="@dimen/s5"
                                android:textSize="15sp"
                                android:text="还款方式"
                                android:textColor="@color/axf_text_title_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <TextView
                                android:textSize="13sp"
                                android:layout_marginLeft="@dimen/s5"
                                android:text="使用微信钱包还信用卡，或使用网上银行、手机银行等电子渠道向信用卡转账"
                                android:textColor="@color/axf_text_title_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <LinearLayout android:layout_width="wrap_content"
                                      android:visibility="gone"
                                      android:layout_marginTop="@dimen/s10"
                                      android:orientation="horizontal"
                                      android:layout_height="wrap_content">
                            <ImageView
                                    android:layout_marginTop="3dp"
                                    android:layout_gravity="top"
                                    android:background="@drawable/w_red_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            <TextView
                                    android:id="@+id/telTxt"
                                    android:textSize="@dimen/s10"
                                    android:layout_marginLeft="@dimen/s5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            <Button style="@style/button_text"
                    android:text="知道了"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/notice_btn"
                    android:textSize="@dimen/text_size_s2"
                    android:layout_marginRight="@dimen/s40"
                    android:layout_marginLeft="@dimen/s40"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_height="@dimen/s30"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/btn_axf_blue"/>
        </RelativeLayout>
        <ImageView
                android:id="@+id/title_icon"
                android:background="@drawable/important_title_icon"
                android:layout_width="70dp"
                android:layout_height="78dp" android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>