<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="0dp">

        <ImageView
            android:layout_marginBottom="@dimen/s10"
            android:layout_gravity="center"
            android:background="@drawable/upqrpay_success"
            android:layout_centerInParent="true"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

        <TextView
            android:textSize="@dimen/s13"
            android:textColor="@color/axf_light_gray"
            android:text="支付成功"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/amount"
            android:layout_marginTop="@dimen/s10"
            android:textSize="@dimen/s30"
            android:text="￥20.00"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="sssss"
            android:textColor="@color/axf_common_red"
            android:layout_marginRight="@dimen/s10"
            android:layout_marginLeft="@dimen/s10"
            android:ellipsize="end"
            android:id="@+id/youhui"
            android:layout_marginTop="@dimen/s2"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="sssssss"
            android:layout_marginRight="@dimen/s10"
            android:layout_marginLeft="@dimen/s10"
            android:ellipsize="end"
            android:id="@+id/way"
            android:layout_marginTop="@dimen/s5"
            android:textSize="@dimen/s15"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="ssssssss"
            android:layout_marginTop="@dimen/s5"
            android:id="@+id/paytime"
            android:textSize="@dimen/s15"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="ssssssss"
            android:layout_marginTop="@dimen/s5"
            android:id="@+id/payno"
            android:textSize="@dimen/s15"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="ssssssss"
            android:layout_marginTop="@dimen/s5"
            android:id="@+id/remark"
            android:textSize="@dimen/s15"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:gravity="center"
            android:layout_marginTop="@dimen/s20"
            android:id="@+id/next"
            android:text="回首页"
            android:layout_height="@dimen/s35"
            style="@style/button_text"
            android:layout_marginLeft="@dimen/s50"
            android:layout_marginRight="@dimen/s50"
            android:background="@drawable/btn_axf_blue"/>

    </LinearLayout>
</LinearLayout>