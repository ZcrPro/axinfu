<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:background="@color/axf_common_blue"
            android:layout_width="fill_parent" android:layout_height="48dp">
        <RelativeLayout android:layout_width="30dp"
                        android:id="@+id/back_icon"
                        android:layout_marginLeft="@dimen/s15"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_height="fill_parent">
            <ImageView
                    android:id="@+id/input_back"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
                android:text="个人头像"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/s15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/s50">
        <LinearLayout
                android:id="@+id/btn_from_gallery"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <ImageView
                    android:background="@drawable/photo_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@color/axf_text_title_gray"
                    android:textSize="@dimen/text_size_s4"
                    android:layout_marginTop="@dimen/s5"
                    android:text="选择照片"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/btn_from_camera"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <ImageView
                    android:background="@drawable/camera_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@color/axf_text_title_gray"
                    android:textSize="@dimen/text_size_s4"
                    android:layout_marginTop="@dimen/s5"
                    android:text="拍照"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/save_photo"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <ImageView
                    android:background="@drawable/save_photo_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@color/axf_text_title_gray"
                    android:textSize="@dimen/text_size_s4"
                    android:layout_marginTop="@dimen/s5"
                    android:text="保存照片"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
            android:background="#313131"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <ImageView
                android:background="@drawable/defaulf9_sq"
                android:id="@+id/current_photo"
                android:scaleType="fitCenter"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>