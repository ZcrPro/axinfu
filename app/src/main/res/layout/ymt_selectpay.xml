<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:background="#10000000"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:background="@drawable/unionqrpay_alert_bg"
                android:layout_width="270dp" android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent" android:layout_height="50dp">
                    <TextView
                            android:layout_centerInParent="true"
                            android:id="@+id/text_title"
                            android:text="更多支付方式"
                            android:layout_marginTop="@dimen/s10"
                            android:textColor="@color/axf_text_title_gray"
                            android:textSize="@dimen/text_size_s2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <View
                            android:layout_alignParentBottom="true"
                            android:background="#d3d3d3"
                            android:layout_width="fill_parent"
                            android:layout_height="0.6dp"/>
                </RelativeLayout>
                <ListView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                </ListView>
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp">
                    <Button
                            android:textSize="@dimen/s15"
                            android:id="@+id/next"
                            android:gravity="center"
                            android:text="确认"
                            android:layout_marginTop="@dimen/s7"
                            android:layout_marginRight="@dimen/s20"
                            android:layout_marginLeft="@dimen/s20"
                            style="@style/button_text"
                            android:background="@drawable/btn_axf_blue"/>
                </RelativeLayout>
            </LinearLayout>
            <View android:layout_width="fill_parent" android:layout_height="@dimen/s10"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>