<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="260dp"
            android:layout_height="370dp">
        <RelativeLayout
                android:id="@+id/main_view"
                android:layout_marginTop="-35dp"
                android:layout_below="@+id/title_icon"
                android:background="@drawable/important_notice_text_bg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/s10"
                    android:layout_above="@+id/notice_btn"
                    android:layout_marginLeft="@dimen/s15"
                    android:layout_marginRight="@dimen/s15"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <RelativeLayout
                        android:layout_gravity="center_horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout android:layout_width="wrap_content"
                                  android:orientation="horizontal"
                                  android:layout_centerHorizontal="true"
                                  android:layout_height="wrap_content">
                        <TextView
                                android:layout_marginRight="@dimen/s3"
                                android:textSize="@dimen/text_size_h1"
                                android:textColor="@color/axf_common_green"
                                android:id="@+id/page_index"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:textColor="@color/axf_text_title_gray"
                                android:text="|"
                                android:layout_marginBottom="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="5dp"
                                android:textColor="@color/axf_text_title_gray"
                                android:id="@+id/page_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:lines="1"
                                android:id="@+id/title"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_s1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        <!--<HorizontalScrollView-->
                                <!--android:layout_marginTop="@dimen/s4"-->
                                <!--android:overScrollMode="never"-->
                                <!--android:scrollbars="none"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content">-->
                            <!--<TextView-->
                                    <!--android:lines="1"-->
                                    <!--android:id="@+id/title"-->
                                    <!--android:textColor="@color/black"-->
                                    <!--android:textSize="@dimen/text_size_s1"-->
                                    <!--android:layout_width="wrap_content"-->
                                    <!--android:layout_height="wrap_content"/>-->

                        <!--</HorizontalScrollView>-->
                    </LinearLayout>
                </RelativeLayout>
                <ScrollView
                        android:layout_marginTop="@dimen/s10"
                        android:scrollbars="none"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                    <TextView
                            android:id="@+id/content"
                            android:text=""
                            android:textColor="@color/axf_text_title_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </ScrollView>
            </LinearLayout>
            <Button style="@style/button_text"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/notice_btn"
                    android:textSize="@dimen/text_size_s2"
                    android:layout_marginRight="@dimen/s40"
                    android:layout_marginLeft="@dimen/s40"
                    android:layout_marginBottom="@dimen/s5"
                    android:layout_height="@dimen/s30"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/btn_axf_blue"/>
        </RelativeLayout>
        <ImageView
                android:id="@+id/title_icon"
                android:background="@drawable/important_title_icon"
                android:layout_width="70dp"
                android:layout_height="78dp" android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>