<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="#10000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:background="@drawable/unionqrpay_alert_bg"
            android:layout_width="270dp" android:layout_height="wrap_content">
        <TextView
                android:gravity="center"
                android:lineSpacingExtra="@dimen/s5"
                android:layout_margin="@dimen/s10"
                android:id="@+id/contain"
                android:textSize="@dimen/text_size_s2"
                android:textColor="@color/axf_text_title_gray"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>
        <LinearLayout
                android:id="@+id/bottom_view"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/s10"
                android:layout_marginLeft="@dimen/s10"
                android:layout_width="fill_parent"
                android:layout_height="50dp">
            <Button
                    android:layout_margin="@dimen/s5"
                    android:textColor="@color/axf_common_blue"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/s30"
                    android:textSize="@dimen/s13"
                    android:id="@+id/cancel"
                    android:gravity="center"
                    android:text="取消"
                    android:background="@drawable/union_blueslide_btnbg"/>
            <Button
                    android:layout_margin="@dimen/s5"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/s30"
                    android:textSize="@dimen/s13"
                    android:id="@+id/change"
                    android:gravity="center"
                    android:text="其他支付方式"
                    android:background="@drawable/btn_axf_blue"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>