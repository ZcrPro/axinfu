<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="240dp"
              android:background="@drawable/gy_dialog_bg"
              android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="240dp"
            android:layout_height="wrap_content">
        <TextView
                android:layout_gravity="center_horizontal"
                android:text="校园安心付App下载"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/s15"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ProgressBar
                android:progressDrawable="@drawable/gyprogress"
                android:id="@+id/progress"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="20dp"/>
        <TextView
                android:id="@+id/progressindex"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/progress"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <View
                android:layout_marginTop="@dimen/s20"
                android:background="@color/axf_line_gray"
                android:layout_width="fill_parent" android:layout_height="1dp"/>
        <FrameLayout android:layout_width="fill_parent" android:layout_height="35dp">
            <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/doneviewid"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                 <TextView
                         android:text="安装"
                         android:textColor="@color/black"
                         android:layout_centerInParent="true"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/ingviewid"
                    android:orientation="horizontal"
                    android:background="@drawable/dialog_click_bg"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <TextView
                        android:id="@+id/update"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:text="更新"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <View
                        android:background="@color/axf_line_gray"
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"/>
                <TextView
                        android:id="@+id/exit"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:text="强制退出"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>