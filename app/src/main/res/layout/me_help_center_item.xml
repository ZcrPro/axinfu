<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <View android:layout_width="fill_parent" android:layout_height="@dimen/s1" android:background="@color/axf_bg_blue"/>
    <RelativeLayout
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/s45">
        <TextView
                android:id="@+id/question_title"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/s15"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
                android:layout_marginRight="@dimen/s15"
                android:background="@drawable/next_arrow_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>