<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_marginLeft="@dimen/s10"
            android:layout_width="fill_parent"
            android:layout_height="50dp">
        <ImageView
                android:id="@+id/bankIcon"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="28dp"
                android:layout_height="28dp"/>
        <LinearLayout
                android:layout_marginLeft="@dimen/s10"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/bankIcon"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:textColor="@color/black"
                        android:textSize="@dimen/s15"
                        android:text="123"
                        android:id="@+id/bankName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textColor="@color/black"
                        android:textSize="@dimen/s15"
                        android:layout_marginLeft="@dimen/s10"
                        android:text="123"
                        android:id="@+id/cardNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:visibility="gone"
                    android:textSize="@dimen/s13"
                    android:id="@+id/couponText"
                    android:textColor="@color/axf_common_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <ImageView
                android:visibility="gone"
                android:id="@+id/alreadySelect"
                android:background="@drawable/union_bank_right"
                android:layout_marginRight="@dimen/s10"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <View
            android:layout_alignParentBottom="true"
            android:background="@color/axf_line_gray"
                android:layout_width="wrap_content"
            android:layout_height="0.8dp"/>

    </RelativeLayout>
</LinearLayout>