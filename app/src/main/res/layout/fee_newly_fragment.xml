<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/axf_bg_blue"
    android:orientation="vertical">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_wa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/axf_text_uncheck_blue"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_bufen_wa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/s5"
            android:drawableLeft="@drawable/w_icon"
            android:drawablePadding="@dimen/s3"
            android:gravity="left"
            android:textColor="@color/axf_common_blue"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s10"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/s10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/s10"
            android:layout_marginLeft="@dimen/s10"
            android:layout_marginRight="@dimen/s10"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_other_name"
                android:layout_width="@dimen/s15"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="姓&#160;&#160;&#160;&#160;&#160;&#160;&#160;名"
                android:textColor="@color/axf_text_title_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/ed_other_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/s35"
                android:layout_marginLeft="@dimen/s5"
                android:layout_weight="1"
                android:background="@drawable/payment_check_edittext"
                android:hint="必填"
                android:padding="@dimen/s10"
                android:textColor="@color/axf_text_content_gray"
                android:textColorHint="@color/axf_text_content_gray"
                android:textSize="13sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/s10"
            android:layout_marginLeft="@dimen/s10"
            android:layout_marginRight="@dimen/s10"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_other_id_card"
                android:layout_width="@dimen/s15"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="身份证号"
                android:textColor="@color/axf_text_title_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/ed_other_other_id_card"
                android:layout_width="0dp"
                android:layout_height="@dimen/s35"
                android:layout_marginLeft="@dimen/s5"
                android:layout_weight="1"
                android:background="@drawable/payment_check_edittext"
                android:hint="必填，非内地学生填写缴费证件号码"
                android:padding="@dimen/s10"
                android:textColor="@color/axf_text_content_gray"
                android:textColorHint="@color/axf_text_content_gray"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/new_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/s10"
            android:layout_marginLeft="@dimen/s10"
            android:layout_marginRight="@dimen/s10"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_other_info"
                android:layout_width="@dimen/s15"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:textColor="@color/axf_text_title_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/ed_other_info"
                android:layout_width="0dp"
                android:layout_height="@dimen/s35"
                android:layout_marginLeft="@dimen/s5"
                android:layout_weight="1"
                android:background="@drawable/payment_check_edittext"
                android:padding="@dimen/s10"
                android:textColor="@color/axf_text_content_gray"
                android:textColorHint="@color/axf_text_content_gray"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/s20"
        android:background="@drawable/btn_axf_blue"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>
