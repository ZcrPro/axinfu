<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/axf_bg_blue"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_marginTop="@dimen/s20"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="120dp">
            <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp">
                <TextView
                        android:id="@+id/text_title"
                        android:layout_margin="@dimen/s15"
                        android:textSize="@dimen/s12"
                        android:textColor="@color/black"
                        android:text="姓      名"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:layout_height="@dimen/s35"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/text_title"
                        android:hint="请输入你的姓名"
                        style="@style/edit_text"
                        android:id="@+id/inputEdit"/>

            </RelativeLayout>
            <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp">
                <TextView
                        android:id="@+id/text2"
                        android:layout_margin="@dimen/s15"
                        android:textSize="@dimen/s12"
                        android:textColor="@color/black"
                        android:text="身 份 证"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:maxLength="18"
                        android:inputType="text"
                        android:digits="1234567890xX"
                        android:layout_height="@dimen/s35"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/text2"
                        android:hint="请输入你的身份证"
                        style="@style/edit_text"
                        android:id="@+id/inputEditId"/>
            </RelativeLayout>
        </LinearLayout>

        <Button
                android:layout_marginTop="@dimen/s20"
                android:layout_height="40dp"
                android:gravity="center"
                android:id="@+id/cernext"
                android:text="立即认证"
                style="@style/button_text"
                android:layout_marginLeft="@dimen/s15"
                android:layout_marginRight="@dimen/s15"
                android:background="@drawable/btn_axf_blue"/>
    </LinearLayout>

</FrameLayout>