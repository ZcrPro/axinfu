<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/axf_bg_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s20"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/s10"
            android:layout_marginLeft="@dimen/s10"
            android:layout_marginRight="@dimen/s10"
            android:layout_marginTop="@dimen/s10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:minWidth="@dimen/s17"
                android:text="姓&#160;&#160;&#160;&#160;名"
                android:textColor="@color/axf_text_title_gray"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s35"
                android:layout_marginLeft="@dimen/s5"
                android:layout_toRightOf="@id/tv_name"
                android:background="@drawable/payment_check_edittext"
                android:padding="@dimen/s10"
                android:textColor="@color/axf_text_content_gray"
                android:textColorHint="@color/axf_light_gray"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/s10"
            android:layout_marginLeft="@dimen/s10"
            android:layout_marginRight="@dimen/s10">

            <TextView
                android:id="@+id/tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="身份证"
                android:textColor="@color/axf_text_title_gray"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/ed_idcard"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s35"
                android:layout_marginLeft="@dimen/s5"
                android:layout_toRightOf="@id/tv_name2"
                android:background="@drawable/payment_check_edittext"
                android:padding="@dimen/s10"
                android:textColor="@color/axf_text_content_gray"
                android:textColorHint="@color/axf_light_gray"
                android:textSize="15sp" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:layout_margin="@dimen/s10"
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_axf_blue"
        android:enabled="true"
        android:text="立即认证"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_marginLeft="@dimen/s10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left">

        <ImageView
            android:id="@+id/iv_w_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/w_icon"/>

        <TextView
            android:text="你将开通贵阳银行青春爽心贷服务"
            android:id="@+id/w_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/s15"
            android:textColor="@color/axf_common_blue"
            android:textSize="13sp" />

    </RelativeLayout>

</LinearLayout>
