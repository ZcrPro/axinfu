<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/s15"
        android:gravity="bottom">
    <LinearLayout
            android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/feedback">
        <Button
                android:id="@+id/btn_from_camera"
                android:layout_width="fill_parent" android:layout_height="@dimen/s40"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:text="拍照"/>
        <View android:layout_width="fill_parent" android:layout_height="0.7dp" android:background="@color/axf_line_gray"/>
        <Button
                android:id="@+id/btn_from_gallery"
                android:layout_width="fill_parent" android:layout_height="@dimen/s40"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:text="从相册选择"/>
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/s10"
                  android:background="@drawable/feedback">
        <Button
                android:id="@+id/btn_cancel"
                android:layout_width="fill_parent" android:layout_height="@dimen/s40"
                android:textColor="#ff6e68"
                android:background="@android:color/transparent"
                android:text="取消"/>
    </LinearLayout>
</LinearLayout>