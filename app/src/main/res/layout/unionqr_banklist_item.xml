<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.daimajia.swipe.SwipeLayout
            android:id="@+id/swipeLayout"
            android:layout_width="fill_parent"
            android:layout_height="100dp">
        <!-- Bottom View Start-->
        <LinearLayout
                android:background="@drawable/unionpat_bankitem_right_bg"
                android:id="@+id/bottom_wrapper"
                android:layout_width="100dp"
                android:layout_height="80dp">
            <ImageView
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/qr_delbank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <!--What you want to show-->
        </LinearLayout>
        <!-- Bottom View End-->

        <!-- Surface View Start -->
        <RelativeLayout
                android:orientation="vertical"
                android:id="@+id/mainItem"
                android:background="@drawable/upqr_bank_item_bg"
                android:layout_width="match_parent"
                android:layout_height="80dp">

            <RelativeLayout
                    android:layout_marginTop="@dimen/s15"
                    android:layout_marginLeft="@dimen/s20"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp">
                <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/bank_icon"
                        android:layout_marginTop="@dimen/s5"
                        android:layout_width="28dp"
                        android:layout_height="28dp"/>
                <LinearLayout
                        android:layout_marginLeft="@dimen/s5"
                        android:layout_centerVertical="true"
                        android:orientation="vertical"
                        android:layout_toRightOf="@id/bank_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:textSize="@dimen/s10"
                            android:textColor="@color/white"
                            android:text="123"
                            android:id="@+id/bank_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:textSize="@dimen/s10"
                            android:textColor="@color/white"
                            android:text="123"
                            android:id="@+id/bank_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
            <ImageView
                    android:layout_marginTop="@dimen/s20"
                    android:layout_marginRight="@dimen/s20"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/union_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/card_no"
                    android:layout_marginRight="@dimen/s20"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/s14"
                    android:textColor="@color/white"
                    android:text="*******************123"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <!--What you want to show in SurfaceView-->
        </RelativeLayout>
        <!-- Surface View End -->
    </com.daimajia.swipe.SwipeLayout>
</FrameLayout>