<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_way"
            android:layout_width="@dimen/s45"
            android:layout_height="@dimen/s45"
            android:padding="@dimen/s12"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:id="@+id/ll_un_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_way"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/s3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银联支付"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:textColor="@color/axf_common_red"
                android:id="@+id/promotion_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/s3"
                android:text="满20减5，省99"
                android:textSize="11sp"
                android:visibility="gone"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_xinyong_no_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/s10"
            android:text="立即开通"
            android:textColor="@color/axf_common_blue"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_xinyong_no_ent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/s10"
            android:text="金额不足"
            android:textColor="@color/axf_common_red"
            android:textSize="13sp"
            android:visibility="gone" />

        <ImageView
            android:visibility="gone"
            android:layout_marginRight="@dimen/s10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_up_quick"
            android:id="@+id/uppay_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:textColor="@color/axf_common_blue"
            android:textSize="13sp"
            android:text="更换银行卡"
            android:padding="@dimen/s5"
            android:layout_marginRight="@dimen/s10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/into_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <include layout="@layout/line_h"/>

</LinearLayout>
