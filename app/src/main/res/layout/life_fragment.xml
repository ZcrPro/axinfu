<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/axf_bg_blue"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:background="@color/axf_common_blue"
            android:layout_width="fill_parent" android:layout_height="48dp">
        <TextView
                android:textColor="@color/white"
                android:text="生活"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
            android:visibility="gone"
            android:layout_marginRight="@dimen/s20"
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/s25">
        <ImageView
                android:layout_gravity="bottom"
                android:background="@drawable/b_w_icon"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="bottom"
                android:textSize="@dimen/s10"
                android:text="仅限银联二维码交易"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:layout_width="fill_parent" android:layout_height="@dimen/s5"/>
    <LinearLayout
            android:visibility="gone"
            android:background="@drawable/shenghuo_bg"
            android:layout_marginRight="@dimen/s20"
            android:layout_marginLeft="@dimen/s20"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/s110">
        <RelativeLayout
                android:id="@+id/union_swept_scan"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent">
            <ImageView
                    android:id="@+id/scan_icon"
                    android:layout_marginTop="@dimen/s20"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/union_swep_qr_scan"
                    android:layout_width="@dimen/s45"
                    android:layout_height="@dimen/s45"/>
            <TextView
                    android:textColor="@color/black"
                    android:text="扫一扫"
                    android:textSize="@dimen/s10"
                    android:layout_marginTop="@dimen/s10"
                    android:layout_below="@id/scan_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/union_swept_scan_qr"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent">
            <ImageView
                    android:id="@+id/qr_icon"
                    android:layout_marginTop="@dimen/s20"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/union_swep_qr_icon"
                    android:layout_width="@dimen/s45"
                    android:layout_height="@dimen/s45"/>
            <TextView
                    android:textColor="@color/black"
                    android:text="付款码"
                    android:textSize="@dimen/s10"
                    android:layout_marginTop="@dimen/s10"
                    android:layout_below="@id/qr_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/union_swept_scan_record"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent">
            <ImageView
                    android:id="@+id/record_icon"
                    android:layout_marginTop="@dimen/s20"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/union_swep_qr_record"
                    android:layout_width="@dimen/s45"
                    android:layout_height="@dimen/s45"/>
            <TextView
                    android:textColor="@color/black"
                    android:text="交易记录"
                    android:textSize="@dimen/s10"
                    android:layout_marginTop="@dimen/s10"
                    android:layout_below="@id/record_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

    </LinearLayout>
    <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:overScrollMode="never"/>
</LinearLayout>