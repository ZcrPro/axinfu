<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
               android:layout_width="wrap_content"
               android:background="@drawable/btn_bg_selector"
               android:layout_height="wrap_content">
    <RelativeLayout
            android:layout_margin="@dimen/s10"
            android:layout_width="fill_parent"
            android:layout_height="70dp">
        <LinearLayout
                android:id="@+id/amtview"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_marginBottom="30dp"
                    android:id="@+id/amoungbig"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/s28"
                    android:layout_toLeftOf="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginBottom="30dp"
                    android:layout_alignParentBottom="true"
                    android:textSize="@dimen/s20"
                    android:id="@+id/amount"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
                android:layout_toLeftOf="@+id/amtview"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/s5"
                android:text="123"
                android:lines="1"
                android:textSize="@dimen/s15"
                style="@style/TextView_Title"
                android:id="@+id/type"
                android:gravity="left"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:textSize="@dimen/s13"
                android:layout_marginTop="@dimen/s2"
                android:id="@+id/title"
                android:textColor="@color/axf_light_gray"
                android:text="13"
                style="@style/TextView_Content"
                android:layout_below="@id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/time"
                android:layout_alignParentBottom="true"
                android:textColor="@color/axf_light_gray"
                android:text="13"
                style="@style/TextView_Content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>