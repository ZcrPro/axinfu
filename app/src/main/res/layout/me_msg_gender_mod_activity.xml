<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/axf_bg_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s80"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RadioButton
                android:layout_marginRight="@dimen/s5"
                android:id="@+id/radioMale"
                android:layout_width="@dimen/s15"
                android:layout_height="@dimen/s15"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/s10"
                android:background="@drawable/fee_radio"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/radioMale"
                android:text="男" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/axf_line_gray" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RadioButton
                android:layout_marginRight="@dimen/s5"
                android:id="@+id/radioFemale"
                android:layout_width="@dimen/s15"
                android:layout_height="@dimen/s15"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/s10"
                android:background="@drawable/fee_radio"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/radioFemale"
                android:text="女" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/modify_genter"
        style="@style/button_text"
        android:layout_margin="@dimen/s15"
        android:background="@drawable/btn_axf_blue"
        android:text="完成" />
</LinearLayout>