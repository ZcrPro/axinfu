<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:background="#10000000"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:background="@drawable/unionqrpay_alert_bg"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/inputEdit"
                style="@style/edit_text"
                android:layout_height="wrap_content"
                android:layout_above="@id/next"
                android:layout_below="@id/title"
                android:layout_margin="@dimen/s15"
                android:gravity="top|left"
                android:maxLength="50"
                android:paddingTop="@dimen/s5" />

            <View
                android:id="@+id/textView"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/s20"
                android:layout_alignParentBottom="true" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="添加备注"
                android:textColor="@color/axf_text_title_gray"
                android:textSize="@dimen/text_size_s2" />

            <Button
                android:id="@+id/next"
                style="@style/button_text"
                android:layout_height="@dimen/s28"
                android:layout_above="@+id/cancelremark"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/s20"
                android:layout_marginRight="@dimen/s20"
                android:background="@drawable/btn_axf_blue"
                android:gravity="center"
                android:text="确认"
                android:textSize="@dimen/s13" />

            <TextView
                android:id="@+id/cancelremark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/s10"
                android:layout_marginTop="@dimen/s10"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="@dimen/s13" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>