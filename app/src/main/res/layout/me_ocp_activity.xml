<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/axf_bg_blue"
    android:paddingTop="@dimen/s10"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_card_id"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s40"
        android:background="@drawable/btn_bg_selector">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/ver_id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/s15"/>

        <TextView
            android:id="@+id/ver_id_ve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/s10"
            android:layout_toLeftOf="@+id/accountNextIcon1" />

        <ImageView
            android:id="@+id/accountNextIcon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/s15"
            android:background="@drawable/choose_city_next_icon" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/s15"
        android:layout_marginRight="@dimen/s15"
        android:background="@color/axf_line_gray" />

    <RelativeLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/rl_xgh"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s40"
        android:background="@drawable/btn_bg_selector">

        <TextView
            android:text="学工号"
            android:textColor="@color/black"
            android:id="@+id/ver_xgh_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/s15"/>

        <TextView
            android:gravity="center"
            android:id="@+id/ver_xgh_ve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/accountNextIcon"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_toLeftOf="@+id/accountNextIcon"
            android:layout_toStartOf="@+id/accountNextIcon" />

        <ImageView
            android:id="@+id/accountNextIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/s15"
            android:background="@drawable/choose_city_next_icon" />
    </RelativeLayout>

</LinearLayout>