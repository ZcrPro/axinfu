<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginTop="@dimen/s3"
    android:padding="@dimen/s5"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_toRightOf="@+id/ll1"
            android:id="@+id/ll2"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/s10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loan_amount"
                android:textColor="@color/axf_common_blue"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="68.00" />

            <TextView
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贷款金额" />

        </LinearLayout>

        <LinearLayout
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/s10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/loan_date1"
                    android:textColor="@color/gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="贷款日期：897889" />

                <TextView
                    android:id="@+id/loan_date2"
                    android:textColor="@color/gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="贷款日期：897889" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/right"
        android:layout_width="@dimen/s25"
        android:layout_height="@dimen/s25"
        android:layout_gravity="center"
        android:padding="@dimen/s3"
        android:src="@mipmap/rightarrow" />

</LinearLayout>

