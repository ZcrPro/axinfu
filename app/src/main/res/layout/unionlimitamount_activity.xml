<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_height="match_parent"
              android:background="@color/axf_bg_blue">
    <RelativeLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0dp">
        <RelativeLayout
                android:id="@+id/amountviewid"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="160dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <RelativeLayout
                        android:layout_marginTop="@dimen/s15"
                        android:layout_marginBottom="@dimen/s15"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent">
                    <TextView
                            android:id="@+id/text_march"
                            android:layout_centerHorizontal="true"
                            android:textSize="@dimen/s20"
                            android:text="12313"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/remarkidtext"
                            android:textSize="@dimen/s10"
                            android:textColor="@color/grgray"
                            android:text="我是留言我是留言我是留言我是留言"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <EditText
                            android:gravity="center_horizontal"
                            android:text="12313"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/s27"
                            android:id="@+id/amountedit"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/axf_line_gray"
                    android:layout_width="fill_parent" android:layout_height="0.8dp"/>
        </RelativeLayout>
        <RelativeLayout
                android:background="@color/white"
                android:layout_below="@id/amountviewid"
                android:id="@+id/remarkViewid"
                android:layout_width="fill_parent"
                android:layout_height="40dp">
            <TextView
                    android:textSize="@dimen/s10"
                    android:textColor="@color/axf_common_blue"
                    android:layout_marginLeft="@dimen/s10"
                    android:layout_centerVertical="true"
                    android:text="添加备注"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <View
                    android:layout_alignParentBottom="true"
                    android:background="@color/axf_line_gray"
                    android:layout_width="fill_parent" android:layout_height="0.8dp"/>
        </RelativeLayout>
    </RelativeLayout>


    <com.zhihuianxin.xyaxf.app.view.KeyboardAmountView
            android:layout_weight="0.7"
            android:layout_alignParentBottom="true"
            android:id="@+id/am_nkv_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true" />

</LinearLayout>
