<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <RelativeLayout
            android:orientation="horizontal"
            android:background="@color/axf_bg_blue"
            android:id="@+id/ll_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <RelativeLayout
                android:id="@+id/topview"
                android:background="@color/axf_common_blue"
                android:layout_width="fill_parent"
                android:layout_height="48dp">
            <RelativeLayout
                    android:id="@+id/backview"
                    android:layout_alignParentLeft="true"
                    android:layout_width="50dp"
                    android:layout_height="fill_parent">

            </RelativeLayout>
            <TextView
                    android:textSize="17sp"
                    android:layout_centerInParent="true"
                    android:text="交易记录"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/closedrecordsId"
                    android:text="已关闭交易"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/s10"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/backicon"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:background="@drawable/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>

        <com.zhihuianxin.xyaxf.app.view.SwipeRefreshAndLoadMorePayNewListLayout
                android:id="@+id/swipe"
                android:layout_below="@id/topview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:direction="both">
            <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <LinearLayout
                        android:id="@+id/selectView"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp">
                    <RelativeLayout
                            android:orientation="horizontal"
                            android:id="@+id/searchtimeview"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_centerInParent="true"
                                      android:orientation="horizontal"
                                      android:layout_height="wrap_content">
                            <TextView
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:id="@+id/searchtimeTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            <ImageView
                                    android:background="@drawable/icon_down"
                                    android:id="@+id/searchtimeicon"
                                    android:layout_marginLeft="@dimen/s10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                            android:layout_marginBottom="@dimen/s5"
                            android:layout_marginTop="@dimen/s5"
                            android:background="#000000"
                            android:layout_width="1dp"
                            android:layout_height="fill_parent"/>
                    <RelativeLayout
                            android:orientation="horizontal"
                            android:id="@+id/searchpayforview"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent">
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_centerInParent="true"
                                      android:orientation="horizontal"
                                      android:layout_height="wrap_content">
                            <TextView
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:id="@+id/searchpayforTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            <ImageView
                                    android:background="@drawable/icon_down"
                                    android:id="@+id/searchpayforicon"
                                    android:layout_marginLeft="@dimen/s10"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <se.emilsjolander.stickylistheaders.StickyListHeadersListView
                        android:layout_below="@id/selectView"
                        android:id="@+id/stickLView"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:divider="#00000000"
                        android:listSelector="#00000000"/>
                <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/bg_null" />

                <TextView
                        android:visibility="gone"
                        android:id="@+id/null_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_null"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/s10"
                        android:text="无交易记录"
                        android:textColor="#208af1" />
                <View
                        android:visibility="gone"
                        android:id="@+id/searchBgView"
                        android:background="#81000000"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"/>
                <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/payforview"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/s10"
                        android:layout_alignParentBottom="true"
                        android:layout_width="fill_parent"
                        android:layout_height="280dp">
                    <RelativeLayout
                            android:id="@+id/payforall"
                            android:background="@color/white"
                            android:layout_width="fill_parent"
                            android:layout_height="45dp">
                        <TextView
                                android:layout_centerInParent="true"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:text="全部类型"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:id="@+id/payforecard"
                            android:background="@color/white"
                            android:layout_width="fill_parent"
                            android:layout_height="45dp">
                        <TextView
                                android:layout_centerInParent="true"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:text="一卡通充值"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:id="@+id/payforfee"
                            android:background="@color/white"
                            android:layout_width="fill_parent"
                            android:layout_height="45dp">
                        <TextView
                                android:layout_centerInParent="true"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:text="缴费"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:id="@+id/payforscan"
                            android:background="@color/white"
                            android:layout_width="fill_parent"
                            android:layout_height="45dp">
                        <TextView
                                android:layout_centerInParent="true"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:text="扫码支付"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout
                            android:id="@+id/payforupqr"
                            android:background="@color/white"
                            android:layout_width="fill_parent"
                            android:layout_height="45dp">
                        <TextView
                                android:layout_centerInParent="true"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:text="付款码支付"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <View android:layout_width="fill_parent" android:layout_height="10dp"/>
                    <RelativeLayout
                            android:id="@+id/payforcancel"
                            android:background="@color/white"
                            android:layout_width="fill_parent"
                            android:layout_height="45dp">
                        <TextView
                                android:layout_centerInParent="true"
                                android:textSize="16sp"
                                android:textColor="@color/axf_common_red"
                                android:text="取消"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </com.zhihuianxin.xyaxf.app.view.SwipeRefreshAndLoadMorePayNewListLayout>

    </RelativeLayout>

</LinearLayout>