<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <RelativeLayout
            android:background="#10000000"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <RelativeLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:background="@drawable/unionqrpay_alert_bg"
                android:layout_width="270dp" android:layout_height="100dp">
            <TextView
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/s5"
                    android:text="支付密码不正确，你还可以输入两次"
                    android:layout_margin="@dimen/s10"
                    android:layout_centerInParent="true"
                    android:id="@+id/contain"
                    android:layout_above="@id/bottom_view"
                    android:textSize="@dimen/text_size_s2"
                    android:textColor="@color/axf_text_title_gray"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>
            <LinearLayout
                    android:id="@+id/bottom_view"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/s10"
                    android:layout_marginLeft="@dimen/s10"
                    android:layout_above="@id/textView"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp">
                <Button
                        android:layout_margin="@dimen/s5"
                        android:textColor="@color/axf_common_blue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/s30"
                        android:textSize="@dimen/s13"
                        android:id="@+id/commit"
                        android:gravity="center"
                        android:text="重新输入"
                        android:background="@drawable/union_blueslide_btnbg"/>
                <Button
                        android:layout_margin="@dimen/s5"
                        android:textColor="@color/white"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/s30"
                        android:textSize="@dimen/s13"
                        android:id="@+id/cancel"
                        android:gravity="center"
                        android:text="忘记密码"
                        android:background="@drawable/btn_axf_blue"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>