<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
            android:layout_centerInParent="true"
            android:id="@+id/mainliner"
            android:orientation="vertical"
            android:background="@drawable/repayment_result_bg"
            android:layout_width="fill_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical"
                android:layout_width="fill_parent" android:layout_height="fill_parent">
            <ImageView
                    android:id="@+id/icon"
                    android:layout_marginTop="@dimen/s20"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="@dimen/s5"
                    android:id="@+id/result"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:id="@+id/reason"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <Button
                    android:layout_marginTop="20dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/s10"
                    android:textSize="15sp"
                    android:id="@+id/next"
                    android:text="知道了"
                    style="@style/button_text"
                    android:background="@drawable/btn_axf_blue"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>