<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/axf_light_gray"
            android:textSize="12sp"
            android:id="@+id/tv_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/s3"
            android:singleLine="true"
            android:text="流水号：151215" />

        <TextView
            android:textColor="@color/axf_light_gray"
            android:layout_marginRight="@dimen/s3"
            android:textSize="12sp"
            android:id="@+id/tv_fee_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12-08 13：20" />

        <TextView
            android:paddingRight="@dimen/s10"
            android:gravity="right"
            android:layout_weight="1"
            android:textColor="@color/axf_light_gray"
            android:textSize="12sp"
            android:id="@+id/tv_fee_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10元" />

    </LinearLayout>

</LinearLayout>
